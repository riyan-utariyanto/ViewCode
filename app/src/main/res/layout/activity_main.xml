<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faecec"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.riyan.viewhtml.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/enterurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Url :"
            android:textColor="#000000"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_toRightOf="@+id/enterurl"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>


    <EditText
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="www.example.com"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:singleLine="true"/>


    <Button
        android:id="@+id/myButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="View Source Code" />

    <ScrollView
        android:id="@+id/myResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Page Source Will Appear Here"
            android:padding="10dp"
            android:textSize="16dp"

            />

    </ScrollView>

</LinearLayout>
